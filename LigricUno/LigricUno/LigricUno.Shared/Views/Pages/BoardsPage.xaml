<Page x:Class="LigricUno.Views.Pages.BoardsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
      xmlns:attached="using:LigricMvvm.AttachedProperties" 
      attached:ViewModelLocator.AutoWireViewModel="True"
      
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:behaviors="using:LigricCommonTypesMvvm.Behaviors"
      xmlns:cc="using:LigricUno.Views.CustomControls"
      xmlns:local="using:LigricUno.Views.Pages"
      xmlns:converters="using:LigricCommonTypesMvvm.Converters"
      
      d:DataContext="{d:DesignInstance local:BoardsViewModel, IsDesignTimeCreatable=True}"
      Background="#cbcbcd">
    <Page.Resources>
        <converters:CollectionToUniqueCollectionConverter x:Key="CollectionToUniqueCollectionConverter"/>
    </Page.Resources>

    <Grid>

        <Canvas >
            <Interactivity:Interaction.Behaviors>
                <behaviors:DragPositionBehavior/>
            </Interactivity:Interaction.Behaviors>

            <cc:BoardStandard Margin="250,450,0,0" Width="250" Height="400" Title="{Binding TestBoard.Title}"
                              Ads="{Binding TestBoard.Ads, Converter={StaticResource CollectionToUniqueCollectionConverter}}"/>

        </Canvas>
        
    </Grid>
</Page>
